generator client {
  provider        = "prisma-client-js"
  output          = "../generated/prisma"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [pgvector(map: "vector", schema: "public")]
}

model Post {
  id          String   @id @default(cuid())
  name        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  createdById String
  user        user     @relation(fields: [createdById], references: [id])

  @@index([name])
}

model account {
  id                    String    @id @default(cuid())
  accountId             String
  providerId            String
  userId                String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  user                  user      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model affiliate {
  id             String     @id @default(cuid())
  userId         String     @unique
  referralCode   String     @unique
  commissionRate Decimal    @db.Decimal(5, 4)
  totalEarned    Decimal    @default(0) @db.Decimal(10, 2)
  isActive       Boolean    @default(true)
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
  user           user       @relation(fields: [userId], references: [id], onDelete: Cascade)
  referral       referral[]

  @@index([isActive])
  @@index([referralCode])
}

// ==========================================
// CHARACTER GENDER & STYLE OPTIONS
// ==========================================

model character_gender_option {
  id          String   @id @default(cuid())
  name        String   @unique // "girl", "men", "trans"
  label       String // Display name e.g., "Girl", "Men", "Trans"
  imageId     String? // Media ID for preview image
  videoId     String? // Media ID for preview video
  description String?
  sortOrder   Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  image              media?              @relation("gender_image", fields: [imageId], references: [id])
  video              media?              @relation("gender_video", fields: [videoId], references: [id])
  characters         character[]
  character_variants character_variant[]

  @@index([isActive])
  @@index([sortOrder])
  @@index([imageId])
  @@index([videoId])
}

model character_style_option {
  id          String   @id @default(cuid())
  name        String   @unique // "realistic", "anime"
  label       String // Display name e.g., "Realistic", "Anime"
  imageId     String? // Media ID for preview image
  videoId     String? // Media ID for preview video
  description String?
  sortOrder   Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  image              media?              @relation("style_image", fields: [imageId], references: [id])
  video              media?              @relation("style_video", fields: [videoId], references: [id])
  characters         character[]
  character_variants character_variant[]

  @@index([isActive])
  @@index([sortOrder])
  @@index([imageId])
  @@index([videoId])
}

// ==========================================
// CHARACTER VARIANT (for option grouping)
// ==========================================

model character_variant {
  id        String  @id @default(cuid())
  genderId  String
  styleId   String
  name      String  @unique // "girl-realistic", "girl-anime", etc.
  label     String  @default("") // Display name e.g., "Realistic", "Anime"
  imageId   String? // Media ID for preview image
  videoId   String? // Media ID for preview video
  isActive  Boolean @default(true)
  sortOrder Int     @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  gender character_gender_option @relation(fields: [genderId], references: [id])
  style  character_style_option  @relation(fields: [styleId], references: [id])
  image  media?                  @relation("variant_image", fields: [imageId], references: [id])
  video  media?                  @relation("variant_video", fields: [videoId], references: [id])

  // Relations to variant-specific option tables
  ethnicities ethnicity_option[]
  hairStyles  hair_style_option[]
  hairColors  hair_color_option[]
  eyeColors   eye_color_option[]
  bodyTypes   body_type_option[]
  breastSizes breast_size_option[]

  @@unique([genderId, styleId])
  @@index([isActive])
  @@index([imageId])
  @@index([videoId])
  @@index([genderId])
  @@index([styleId])
}

// ==========================================
// OPTION TABLES (Dynamic Enums for Admin)
// ==========================================

// --- Universal options (same for all variants) ---

model kink_option {
  id             String           @id @default(cuid())
  name           String           @unique
  label          String           // Display name
  description    String?
  sortOrder      Int              @default(0)
  isActive       Boolean          @default(true)
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  character_kink character_kink[]

  @@index([isActive])
  @@index([sortOrder])
}

model personality_option {
  id          String      @id @default(cuid())
  name        String      @unique
  label       String      // Display name
  imageId     String?     // Media ID for image
  description String?
  sortOrder   Int         @default(0)
  isActive    Boolean     @default(true)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  image     media?      @relation("personality_image", fields: [imageId], references: [id])
  character character[]

  @@index([isActive])
  @@index([sortOrder])
  @@index([imageId])
}

model relationship_option {
  id          String      @id @default(cuid())
  name        String      @unique
  label       String      // Display name
  imageId     String?     // Media ID for image
  description String?
  sortOrder   Int         @default(0)
  isActive    Boolean     @default(true)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  image     media?      @relation("relationship_image", fields: [imageId], references: [id])
  character character[]

  @@index([isActive])
  @@index([sortOrder])
  @@index([imageId])
}

model occupation_option {
  id          String      @id @default(cuid())
  name        String      @unique
  label       String      // Display name
  emoji       String?     // Emoji character like "ðŸŽ“"
  description String?
  sortOrder   Int         @default(0)
  isActive    Boolean     @default(true)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  character   character[]

  @@index([isActive])
  @@index([sortOrder])
}

// --- Variant-specific options (different per character type + style) ---

model ethnicity_option {
  id          String            @id @default(cuid())
  name        String            // e.g., "caucasian"
  label       String            // e.g., "Caucasian"
  variantId   String            // Links to character_variant
  imageId     String            // Media ID for image
  videoId     String?           // Media ID for video (optional)
  description String?
  sortOrder   Int               @default(0)
  isActive    Boolean           @default(true)
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  variant   character_variant @relation(fields: [variantId], references: [id])
  image     media             @relation("ethnicity_image", fields: [imageId], references: [id])
  video     media?            @relation("ethnicity_video", fields: [videoId], references: [id])
  character character[]

  @@unique([name, variantId])
  @@index([variantId])
  @@index([isActive])
  @@index([sortOrder])
  @@index([imageId])
  @@index([videoId])
}

